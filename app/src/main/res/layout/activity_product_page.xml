<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".products.productpage.ProductPageActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="409dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="56dp" />

    <TextView
        android:id="@+id/tv_ppname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="36dp"
        android:text="RUFFLED SKIRT"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_pprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_ppname"
        android:layout_below="@+id/tv_ppname"
        android:layout_marginTop="0dp"
        android:text="69.90 USD" />

    <Button
        android:id="@+id/btn_addtocart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_ppname"
        android:layout_below="@+id/tv_pprice"
        android:text="ADD" />

    <ImageView
        android:id="@+id/icon_pwishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_ppname"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</RelativeLayout>